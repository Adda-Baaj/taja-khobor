{
	// VS Code Go debugger configuration
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run collector (main)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/collector",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"env": {
				"GO111MODULE": "on"
			}
		},
		{
			"name": "Test provider fetchers",
			"type": "go",
			"request": "launch",
			"mode": "test",
			"program": "${workspaceFolder}/pkg/providers",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"env": {
				"GO111MODULE": "on",
				"GOCACHE": "${workspaceFolder}/.gocache"
			}
		}
	]
}